<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Arimo:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Poppins:400,500,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <title>@ViewBag.Title - Container Management System</title>
    <style>
        .introbar {
            linear-gradient: ( rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7) );
            background: url(../../Content/images/darksea.jpg) 50% 0 repeat-y fixed;
            -webkit-background-size: cover;
            background-size: cover;
            background-position: center center;
            color: #ffffff;
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
            -ms-flex-align: center;
            align-items: center;
            height: 13vh;
            text-align: center;
        }

            .introbar h3 {
                letter-spacing: 2px;
            }

        #map {
            height: 100%;
        }
    </style>
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/boostrapdatetime")
    @Styles.Render("~/Content/backanimated")
    @Styles.Render("~/Content/css")

</head>

<body data-spy="scroll" data-offset="50" data-target=".navbar-collapse">


    <!-- =========================
         NAVIGATION LINKS
    ============================== -->

    <div class="preloader">

        <div class="sk-folding-cube">
            <div class="sk-cube1 sk-cube"></div>
            <div class="sk-cube2 sk-cube"></div>
            <div class="sk-cube4 sk-cube"></div>
            <div class="sk-cube3 sk-cube"></div>
        </div>

    </div>
    <div class="navbar navbar-fixed-top custom-navbar" role="navigation">
        <div class="container">

            <!-- navbar header -->
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/images/CMSLogo.png" height="70" width="70" />
                </a>
            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Support", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
                <li>@Html.ActionLink("Register User", "RegisterAdmin", "Account")</li>
                <li>@Html.ActionLink("Schedule", "Index", "ScheduleTbls")</li>
                <li>@Html.ActionLink("View Agent", "Agent", "User")</li>
                <li>@Html.ActionLink("View Booking", "VesselNotify", "VesselTbls")</li>
}
else
{
                <li>@Html.ActionLink("Manage Customer", "Index", "CustomerTbls")</li>
                <li>@Html.ActionLink("Manage Item", "Index", "ItemTbls")</li>
                <li>@Html.ActionLink("Book Vessel", "VesselSchedule", "ScheduleTbls")</li>
                <li>

                    @Html.ActionLink("Notification", "VesselBooking", "VesselTbls", new { sortOrder = ViewBag.NameSortParm }, null)

                </li>
}


}

                    @Html.Partial("_LoginPartial")

                </ul>

            </div>

        </div>
    </div>

    <section class="introbar parallax-section"></section>

    <div class="container body-content">
        @if (TempData["notice"] != null)
        {
            <h4 class="text-danger">@TempData["notice"]</h4>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Container Management System System by Chua Chin Hong</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/backanimated")
    @RenderSection("scripts", required: false)
</body>
</html>
