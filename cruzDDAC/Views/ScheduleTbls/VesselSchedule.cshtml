@model IEnumerable<cruzDDAC.Models.ScheduleTbl>

@{
    ViewBag.Title = "VesselSchedule";
}



<section class="parallax-section">
    <div class="container">
        <div class="row">

            <div class="wow bounceIn col-md-12 col-sm-12">
                <div class="section-title" style="text-align:center">
                    <h1 class="jumbotron label-primary" style="text-align:center;background-color:aquamarine;color:darkorchid"><strong>Sailing Schedule </strong></h1>
                </div>
            </div>

            <div class="wow fadeInUp col-md-6 col-sm-6 col-xs-6" data-wow-delay="0.3s">
                <h2 class="label-info" style="text-align:center"> Passed Schedule</h2>

                @foreach (var item in Model)
                {
                    if (item.Sailing_DepartureDate < DateTime.Now)
                    {
                      
                            <img src="~/Content/images/cargo.jpg" style="height:50px;width:100px;" />
                        

                        <h4>
                            Route:
                            @Html.DisplayFor(modelItem => item.Sailing_Route)
                            Arrive at:
                            @Html.DisplayFor(modelItem => item.Sailing_Destination)
                            <br />
                            Travel From:
                            @Html.DisplayFor(modelItem => item.Sailing_DepartureDate)
                            <br />
                            To:
                            @Html.DisplayFor(modelItem => item.Sailing_ArrivalDate)
                            <br />
                            Remaining Space:
                            @Html.DisplayFor(modelItem => item.Space_Available)
                        </h4>

                        <a href="@Url.Action("Details", new {id= item.Schedule_ID})" class="btn btn-info btn-default">View</a>

                        <br />
                        <hr>
                    }
                }
            </div>



            <div class="wow fadeInUp col-md-6 col-sm-6 col-xs-6" data-wow-delay="0.6s">
                <h2 class="label-success" style="text-align:center"> Incoming Schedule </h2>

                @foreach (var item in Model)
    {


        if (item.Sailing_DepartureDate > DateTime.Now)
        {
            <img src="~/Content/images/cargo1.jpg" style="height:50px;width:100px;" />


            <h4>
                Route:
                @Html.DisplayFor(modelItem => item.Sailing_Route)
                Arrive at:
                @Html.DisplayFor(modelItem => item.Sailing_Destination)
                <br />
                Travel From:
                @Html.DisplayFor(modelItem => item.Sailing_DepartureDate)
                <br />
                To:
                @Html.DisplayFor(modelItem => item.Sailing_ArrivalDate)
                <br />
                Remaining Space:
                @Html.DisplayFor(modelItem => item.Space_Available)
            </h4>

            <a href="@Url.Action("VesselType","VesselTbls", new {id= item.Schedule_ID})" class="btn btn-info btn-default">Select</a>

            <br />
            <hr>

}
}
            </div>




        </div>
    </div>

</section>