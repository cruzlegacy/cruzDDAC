
@model IEnumerable<cruzDDAC.Models.VesselTbl>

@{
    ViewBag.Title = "VesselNotify";
}


<h2 class="jumbotron" style="text-align:center;background-color:aquamarine;color:darkorchid">Booking Approval</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleTbl.Sailing_Route)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vessel_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerTbl.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleTbl.Sailing_DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vessel_Agent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vessel_Approval)
        </th>
        <th>

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleTbl.Sailing_Route)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vessel_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerTbl.Customer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleTbl.Sailing_DepartureDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vessel_Agent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vessel_Approval)
        </td>
        <td>
            <a href="@Url.Action("Notify", "VesselTbls", new { @id=item.Vessel_ID,@status="A"})" class="btn btn-success btn-default">Approve</a>
            <a href="@Url.Action("Notify", "VesselTbls", new {  @id=item.Vessel_ID,@status="D"})" class="btn btn-danger btn-default">Decline</a>

        </td>
        <td></td>
    </tr>
    }

</table>
<br />
<a href="@Url.Action("Index", "VesselTbls")" class="btn btn-info btn-default">View All Bookings</a>
